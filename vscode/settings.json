{
    "editor.fontFamily": "'Iosevka'",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "files.autoSave": "onFocusChange",
    "gitlens.blame.annotation.activeLine": "off",
    "gitlens.codeLens.visibility": "ondemand",
    "workbench.colorTheme": "Plastic - deprioritised punctuation",
    "workbench.iconTheme": "file-icons",
    "editor.renderIndentGuides": true,
    "window.menuBarVisibility": "toggle",
    "editor.cursorBlinking": "solid",
    "editor.rulers": [120],
    "telemetry.enableTelemetry": false,
    "php.suggest.basic": false, // Intelephense takes care of this
    "workbench.activityBar.visible": false,
    // "workbench.colorCustomizations": {
    //     "sideBar.background": "#2c323c",
    //     "editorGroupHeader.tabsBackground": "#282c34"
    // },
    "search.exclude": {
        "**/.tmp": true,
        "**/tmp": true,
        "**/dist": true,
        "**/public": true,
        "**/vendor": true,
        "**/www": true,
        "**/coverage": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "todohighlight.isEnable": false
}
