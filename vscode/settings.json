{
  "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'DejaVu Sans Mono'",
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "editor.fontLigatures": true,
  "files.autoSave": "onFocusChange",
  "workbench.iconTheme": "file-icons",
  "editor.renderIndentGuides": true,
  "window.menuBarVisibility": "toggle",
  "editor.cursorBlinking": "solid",
  "editor.rulers": [120],
  "telemetry.enableTelemetry": false,
  "workbench.activityBar.visible": false,
  "css.validate": false,
  "scss.validate": false,
  "search.exclude": {
    "**/.tmp": true,
    "**/tmp": true,
    "**/dist": true,
    "**/public": true,
    "**/vendor": true,
    "**/www": true,
    "**/coverage": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "php.suggest.basic": false, // Intelephense takes care of this
  "todohighlight.isEnable": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "editor.minimap.enabled": false,
  "extensions.ignoreRecommendations": true,
  "eslint.validate": ["javascript", "javascriptreact", "vue"],
  "python.pythonPath": "/usr/bin/python3",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "workbench.colorTheme": "Egoist One",
  "typescript.npm": "/home/rejd/.nvm/versions/node/v9.0.0/bin/npm",
  "editor.lineHeight": 24,
  "workbench.panel.location": "right",
  "explorer.confirmDragAndDrop": false,
  "rust.rustup": {
    "toolchain": "stable-x86_64-unknown-linux-gnu",
    "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
  },
  "rust.mode": "legacy",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "explorer.confirmDelete": false,
  "git.confirmSync": false
}
